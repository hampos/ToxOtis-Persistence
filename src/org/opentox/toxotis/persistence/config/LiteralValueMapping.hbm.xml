<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping >
    <class
        name="org.opentox.toxotis.ontology.LiteralValue"
        table = "Literal"
        dynamic-insert="true"
        dynamic-update="true"
        select-before-update="false">
        <!--
        LiteralValues are stored in the database in a table
        with two columns: VALUE and DATATYPE.
            -->
        <id column="litId" type="int">
            <generator class="native"/>
        </id>

        <property name="valueAsString" column="VALUE" type="string"/>
        <property name="type" column="DATATYPE" type="org.opentox.toxotis.persistence.usertypes.XSDDatatypeUserType" />

    </class>
</hibernate-mapping>