<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class
        dynamic-insert="true"
        dynamic-update="true"
        mutable="true"
        name="org.opentox.toxotis.ontology.OntologicalClass"
        optimistic-lock="all"
        polymorphism="implicit"
        select-before-update="false"
        discriminator-value="0"
        >
        <id name="uri"/>
        <discriminator column="_DISCRIM_" type="integer" length="1"/>
        <property name="nameSpace"/>
        <property name="name"/>        
        <many-to-one name="metaInfo" class="org.opentox.toxotis.ontology.MetaInfo" not-null="false" cascade="all" unique="true"/>
        <set name="disjointWith" cascade="all">
            <key on-delete="noaction">
                <column name="resource_uri"/>
            </key>
            <many-to-many class="org.opentox.toxotis.ontology.OntologicalClass">
                <column name="disjointWith_uri"/>
            </many-to-many>
        </set>
        <set name="superClasses" cascade="all">
            <key on-delete="noaction">
                <column name="resource_uri"/>
            </key>
            <many-to-many class="org.opentox.toxotis.ontology.OntologicalClass">
                <column name="superclass_uri"/>
            </many-to-many>
        </set>
    </class>

    <subclass
        name="org.opentox.toxotis.ontology.impl.OntologicalClassImpl"
        extends="org.opentox.toxotis.ontology.OntologicalClass"
        discriminator-value="1"
        dynamic-update="true"></subclass>



</hibernate-mapping>
