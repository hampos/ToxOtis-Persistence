<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class
        dynamic-insert="true"
        dynamic-update="true"
        mutable="true"
        name="org.opentox.toxotis.ontology.OntologicalClass"
        optimistic-lock="version"
        polymorphism="implicit"
        select-before-update="false"
        discriminator-value="0"
        >
        <composite-id>
            <key-property name="nameSpace"/>
            <key-property name="name"/>
        </composite-id>
        <discriminator column="_DISCRIM_" type="integer" length="1"/>
        <many-to-one name="metaInfo" class="org.opentox.toxotis.ontology.MetaInfo" not-null="false" cascade="all"/>
        <set name="disjointWith" cascade="all">
            <key on-delete="noaction">
                <column name="resource_NS"/>
                <column name="resource_name" length="50"/>
            </key>
            <many-to-many class="org.opentox.toxotis.ontology.OntologicalClass">
                <column name="disjointWith_NS"/>
                <column name="disjointWith_name" length="50"/>
            </many-to-many>
        </set>
        <set name="superClasses" cascade="all">
            <key on-delete="noaction">
                <column name="resource_NS"/>
                <column name="resource_name" length="50"/>
            </key>
            <many-to-many class="org.opentox.toxotis.ontology.OntologicalClass">
                <column name="superclass_NS"/>
                <column name="superclass_name" length="50"/>
            </many-to-many>
        </set>
    </class>

    <subclass
        name="org.opentox.toxotis.ontology.impl.OntologicalClassImpl"
        extends="org.opentox.toxotis.ontology.OntologicalClass"
        discriminator-value="1"/>



</hibernate-mapping>
